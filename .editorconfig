# https://editorconfig.org/
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 120

# Use 2 spaces for the XML like files
[*.html, *.xml]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.{json,sublime-project}]
indent_size = 2
insert_final_newline = ignore

# Makefiles always use tabs for indentation
[Makefile, *.make]
indent_style = tab

# C and C++ files use an indent width of two
[*.{c,h,cpp,hpp}]
indent_size = 2
